<?xml version="1.0"?>
<odoo>
    <record id="property_type_view_form" model="ir.ui.view">
        <field name="name">property.type.form</field>
        <field name="model">property.type</field>
        <field name="arch" type="xml">
            <form string="Property Type">
                <sheet>
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <label for="name"/>
                        </div>
                        <h1 class="mb32">
                            <field name="name" class="mb16"/>
                        </h1>
                        <field name="offer_count"/>
                        <!-- <button type="action" name="%(property.offer)" string="My Action"/> -->
                    </div>
                    <group>
                        <field name="property_ids">
                            <tree>
                                <field name="name"/>
                                <field name="expected_price"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="property_type_view_tree" model="ir.ui.view">
        <field name="name">property.type.tree</field>
        <field name="model">property.type</field>
        <field name="arch" type="xml">
            <tree string="type">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="property_model_action" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">property.type</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>